{% extends 'base_auth.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <main class="bg-white max-w-lg mx-auto p-8 md:p-12 my-10 rounded-lg shadow-2xl">
        <section>
            <h3 class="font-bold text-2xl">Bienvenue</h3>
            <p class="text-gray-600 pt-2">Connectez vous à votre compte.</p>
        </section>

        <section class="mt-10">
            <form class="flex flex-col" method="POST" action="#">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
            
                <div class="mb-6 pt-3 rounded bg-gray-200">
                    <label class="block text-gray-700 text-sm font-bold mb-2 ml-3" for="email">Email</label>
                    <input type="text"  value="{{ last_username }}" name="email" id="inputEmail" class="bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3" required autofocus>
                </div>
                <div class="mb-6 pt-3 rounded bg-gray-200">
                    <label class="block text-gray-700 text-sm font-bold mb-2 ml-3" for="password">Password</label>
                    <input  type="password" name="password" id="inputPassword" required class="bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3">
                </div>
                {#
                    TODO: Gérer le mdp oublié
                    <div class="flex justify-end">
                        <a href="#" class="text-sm text-purple-600 hover:text-purple-700 hover:underline mb-6">Mot de passe oublié?</a>
                    </div>
                #}

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 rounded shadow-lg hover:shadow-xl transition duration-200" type="submit">S'identifier</button>
            </form>
        </section>
    </main>

    <div class="max-w-lg mx-auto text-center mt-12 mb-6">
        <p class="text-white">Vous n'avez pas de compte? <a href="/register" class="font-bold hover:underline">S'inscrire</a>.</p>
    </div>

{% endblock %}
