{% extends 'base.html.twig' %}

{% block title %}Suggestion index{% endblock %}

{% block body %}
        <div id="main-content" class="w-full flex-1">

            <div class="flex flex-wrap  justify-center">

                <div class="w-full xl:w-2/3 p-6 xl:max-w-6xl">

                    <!--"Container" for the graphs"-->
                    <div class="max-w-full lg:max-w-3xl xl:max-w-5xl">

                        <!--Table Card-->
                        <div class="p-3">
                            <div class="border-b p-3">
                                <h1>Suggestion index</h1>
                            </div>
                            <div class="p-5">


                                <table class="table table-auto w-full">
                                    <thead>
                                        <tr class="bg-blue-200">
                                            <th class="text-left">Id</th>
                                            <th class="text-left">Date De Cr√©ation</th>
                                            <th class="text-left">Titre</th>
                                            <th class="text-left">Description</th>
                                            <th class="text-left">Tags</th>
                                            <th class="text-left">auteur</th>
                                            <th class="text-left">actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for suggestion in suggestions %}
                                        <tr>
                                            <td>{{ suggestion.id }}</td>
                                            <td>{{ suggestion.dateDeCreation ? suggestion.dateDeCreation|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>{{ suggestion.titre }}</td>
                                            <td>{{ suggestion.description }}</td>
                                            <td>
                                                {% for tag in suggestion.tag %}
                                                    <span class="inline-flex items-center justify-center px-2 py-1 mr-2 text-xs font-bold leading-none text-red-100 bg-red-600 rounded-full">{{ tag|e }}</span>
                                                {% endfor %}                
                                            </td>
                                            <td>{{ suggestion.user.fullName }}</td>
                                            <td>
                                                <a href="{{ path('suggestion_show', {'id': suggestion.id}) }}">show</a>
                                                <a href="{{ path('suggestion_edit', {'id': suggestion.id}) }}">edit</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="6">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <p class="py-2"><a href="{{ path('suggestion_new') }}" class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white px-4 border border-blue-500 hover:border-transparent rounded">Create new</a></p>


                            </div>
                        </div>
                        <!--/table Card-->

                    </div>

                </div>
            </div>

        </div>

{% endblock %}
